<?xml version="1.0"?>
<robot name="four_susp" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="damp" value="30" />

<!-- *********************** GAZEBO *********************** -->

   <gazebo>
     <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
       <robotNamespace>/four_susp</robotNamespace>
     </plugin>
   </gazebo>

   <gazebo reference="base_link_leg_fr">
      <implicitSpringDamper>1</implicitSpringDamper>
   </gazebo>
   <gazebo reference="base_link_leg_br">
      <implicitSpringDamper>1</implicitSpringDamper>
   </gazebo>
   <gazebo reference="base_link_leg_fl">
      <implicitSpringDamper>1</implicitSpringDamper>
   </gazebo>
   <gazebo reference="base_link_leg_bl">
      <implicitSpringDamper>1</implicitSpringDamper>
   </gazebo>

<!-- ******************* TRANSMISSIONS ******************** -->

  <transmission name="susp_leg_fr">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="base_link_leg_fr">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="act_leg_fr">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </actuator>
  </transmission>

  <transmission name="susp_leg_br">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="base_link_leg_br">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="act_leg_br">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </actuator>
  </transmission>

  <transmission name="susp_leg_fl">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="base_link_leg_fl">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="act_leg_fl">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </actuator>
  </transmission>

  <transmission name="susp_leg_bl">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="base_link_leg_bl">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="act_leg_bl">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </actuator>
  </transmission>

  <transmission name="drive_wheel_fr">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="leg_fr_wheel_fr">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="act_wheel_fr">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </actuator>
  </transmission>

  <transmission name="drive_wheel_br">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="leg_br_wheel_br">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="act_wheel_br">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </actuator>
  </transmission>

  <transmission name="drive_wheel_fl">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="leg_fl_wheel_fl">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="act_wheel_fl">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </actuator>
  </transmission>

  <transmission name="drive_wheel_bl">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="leg_bl_wheel_bl">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="act_wheel_bl">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </actuator>
  </transmission>

<!-- ************************ LINKS ************************ -->


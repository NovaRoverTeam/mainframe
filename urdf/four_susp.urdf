<!-- ************************ JOINTS *********************** -->

  <joint name="base_link_leg_fr" type="prismatic">
    <parent link="base_link"/>
    <child link="leg_fr"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="0" upper="0.2" velocity="100"/>
    <dynamics damping="${damp}"/>
    <origin xyz="0.3 0.275 0"/>
  </joint>

  <joint name="base_link_leg_fl" type="prismatic">
    <parent link="base_link"/>
    <child link="leg_fl"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="0" upper="0.2" velocity="100"/>
    <dynamics damping="${damp}"/>
    <origin xyz="0.3 -0.275 0"/>
  </joint>

  <joint name="base_link_leg_br" type="prismatic">
    <parent link="base_link"/>
    <child link="leg_br"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="0" upper="0.2" velocity="100"/>
    <dynamics damping="${damp}"/>
    <origin xyz="-0.3 0.275 0"/>
  </joint>

  <joint name="base_link_leg_bl" type="prismatic">
    <parent link="base_link"/>
    <child link="leg_bl"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="0" upper="0.2" velocity="100"/>
    <dynamics damping="${damp}"/>
    <origin xyz="-0.3 -0.275 0"/>
  </joint>
  
  <joint name="leg_fr_wheel_fr" type="continuous">
    <parent link="leg_fr"/>
    <child link="wheel_fr"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 0.05 -0.3"/>
  </joint>

  <joint name="leg_fl_wheel_fl" type="continuous">
    <parent link="leg_fl"/>
    <child link="wheel_fl"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 -0.05 -0.3"/>
  </joint>

  <joint name="leg_br_wheel_br" type="continuous">
    <parent link="leg_br"/>
    <child link="wheel_br"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 0.05 -0.3"/>
  </joint>

  <joint name="leg_bl_wheel_bl" type="continuous">
    <parent link="leg_bl"/>
    <child link="wheel_bl"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 -0.05 -0.3"/>
  </joint> 

</robot>
